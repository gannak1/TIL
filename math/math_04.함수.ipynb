   "source": [
    "# x 변수 생성, x가 0에 수렴\n",
    "# 1/x 에 대한 극한 값\n",
    "\n",
    "x = Symbol('x')\n",
    "Limit(1/x, x, S.Infinity).doit()"
   ]
  },
